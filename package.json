{
  "name": "ci4-bs5-starter",
  "version": "1.0.0",
  "scripts": {
    "dev": "sass src/scss/style.scss public/assets/css/style.css --source-map --load-path=node_modules && sass src/scss/admin.scss public/assets/css/admin_styles.css --source-map --load-path=node_modules",
    "build": "sass src/scss/style.scss public/assets/css/style.css --style=compressed --load-path=node_modules && sass src/scss/admin.scss public/assets/css/admin_styles.css --style=compressed --load-path=node_modules",
    "watch": "sass --watch src/scss/style.scss:public/assets/css/style.css src/scss/admin.scss:public/assets/css/admin_styles.css --load-path=node_modules",
    "build:js": "esbuild src/js/app.js --bundle --outfile=public/assets/js/app.bundle.js --format=iife --minify --sourcemap && esbuild src/js/admin.js --bundle --outfile=public/assets/js/admin.bundle.js --format=iife --minify --sourcemap",
    "dev:js": "esbuild src/js/app.js --bundle --outfile=public/assets/js/app.bundle.js --format=iife --sourcemap --watch & esbuild src/js/admin.js --bundle --outfile=public/assets/js/admin.bundle.js --format=iife --sourcemap --watch",
    "clean:css": "rimraf public/assets/css/style.css.map",
    "clean:js": "rimraf public/assets/js/app.bundle.js public/assets/js/app.bundle.js.map",
    "clean": "npm-run-all -s clean:css clean:js",
    "build:assets": "npm-run-all -s clean build build:js",
    "dev:assets": "npm-run-all -p watch dev:js"
  },
  "dependencies": {
    "bootstrap": "^5.3.3"
  },
  "devDependencies": {
    "sass": "^1.75.0",
    "esbuild": "^0.23.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5"
  }
}
